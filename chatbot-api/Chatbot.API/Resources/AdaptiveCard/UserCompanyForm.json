{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "horizontalAlignment": "Right",
                            "spacing": "None",
                            "height": "stretch",
                            "text": "CNPJ:",
                            "isSubtle": true
                        },
                        {
                            "type": "TextBlock",
                            "horizontalAlignment": "Right",
                            "spacing": "None",
                            "height": "stretch",
                            "size": "Medium",
                            "weight": "Bolder",
                            "text": "{{Cnpj}}",
                            "isSubtle": true
                        },
                        {
                            "type": "TextBlock",
                            "horizontalAlignment": "Right",
                            "spacing": "None",
                            "height": "stretch",
                            "text": "Situação:",
                            "isSubtle": true
                        },
                        {
                            "type": "TextBlock",
                            "horizontalAlignment": "Right",
                            "spacing": "None",
                            "height": "stretch",
                            "size": "Medium",
                            "weight": "Bolder",
                            "color": "{{CorSituacao}}",
                            "text": "{{Situacao}}",
                            "isSubtle": true
                        }
                    ],
                    "width": 3
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "url": "{{DefaultRootUrl}}/images/avatar/doubt.png",
                            "altText": ""
                        }
                    ],
                    "width": 2
                }
            ]
        },
        {
            "type": "Input.Text",
            "id": "CompanyName",
            "value": "{{RazaoSocial}}",
            "validation": {
                "necessity": "RequiredWithVisualCue",
                "errorMessage": "Campo obrigatório"
            },
            "placeholder": "Razão Social (Obrigatório)"
        },
        {
            "type": "Input.Text",
            "id": "TradingName",
            "value": "{{NomeFantasia}}",
            "placeholder": "Nome Fantasia (Opcional)",
            "style": "Email"
        },
        {
            "type": "Input.Text",
            "id": "CompanyAddress",
            "value": "{{Endereco}}",
            "validation": {
                "necessity": "RequiredWithVisualCue",
                "errorMessage": "Campo obrigatório"
            },
            "placeholder": "Endereço (Obrigatório)",
            "isMultiline": true
        },
        {
            "type": "Input.Text",
            "id": "CompanyPartners",
            "value": "{{SociosAdministradores}}",
            "validation": {
                "necessity": "RequiredWithVisualCue",
                "errorMessage": "Campo obrigatório"
            },
            "placeholder": "Sócio(s) Administrador(es): Ex: Sócio1, Sócio2, Diretor1, Diretor2, Admin1, Admin2 (Obrigatório)",
            "isMultiline": true
        },
        {
            "type": "TextBlock",
            "horizontalAlignment": "Left",
            "spacing": "None",
            "size": "Small",
            "color": "Accent",
            "text": "Importante: Separar os nomes dos sócios/administradores por virgula (,)",
            "isSubtle": true
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Confirmar",
            "style": "positive",
            "data": {
                "useAdaptiveCardPromptInWaterfallDialog": true,
                "TaxIdentificationNumber": "{{Cnpj}}",
                "Status": "{{Situacao}}"
            }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0",
    "speak": "<s>Simple speak text here.</s>"
}